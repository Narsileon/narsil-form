{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": false,
		"paths": {
			"@narsil-forms/*": ["./resources/js/*"],
			"@narsil-localization/*": ["./vendor/narsil/localization/resources/js/*"],
			"@narsil-tables/*": ["./vendor/narsil/tables/resources/js/*"],
			"@narsil-tiptap/*": ["./vendor/narsil/tiptap/resources/js/*"],
			"@narsil-tree/*": ["./vendor/narsil/tree/resources/js/*"],
			"@narsil-ui/*": ["./vendor/narsil/ui/resources/js/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": false,
		"strict": true,
		"target": "esnext"
	},
	"include": ["resources/js/**/*.ts", "resources/js/**/*.tsx", "vendor/narsil/**/*.ts", "vendor/narsil/**/*.tsx"],
	"exclude": ["node_modules"]
}
